</head>
<body>
    <div class="container">
        <div class='header'>DOM Array Methods</div>
        <form class="sidebar box"> <!--action="/test" method="post"-->
            <button type="submit" id="add_user">Add User</button>
            <button type="submit" id="double_money">Double Money</button>
            <button type="submit" id="million">Show Only Millionaires</button>
            <button type="submit" id="richest">Sort by Richest</button>
            <button type="submit" id="calculate">Calculate entire wealth</button>
        </form>
        <div class="records box">
            <div class="person_header">
                <span class="person_h1" id="unique">TEST</span>
                <span>Wealth</span>
            </div>
            {{#each arr}}
            <div class="person_record first">
                <span class="person_name" >{{name}}</span>
                <span class="person_wealth">{{wealth}}</span>
            </div>
            {{/each}}
        </div>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="/css/click.js"></script>
</body>
</html>